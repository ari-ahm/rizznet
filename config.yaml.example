categories:
  - name: "speed"
    strategy: "standard"
    weight: 10
    bucket_size: 10
    params: {}

  - name: "clean"
    strategy: "standard"
    weight: 10
    bucket_size: 10
    params:
      require_clean: true

  - name: "fastly"
    strategy: "standard"
    weight: 2
    bucket_size: 3
    params:
      entry_isp: "Fastly"

publishers:
