database:
  path: "rizznet.db"
  max_proxies: 20000

system_proxy:
  enabled: true
  fallback: "socks5://127.0.0.1:10808"

tester:
  health_timeout: 10s      # Time limit for TCP connect & TTFB (First Byte)
  speed_timeout: 30s       # Time limit for the full download speed test
  
  # Number of retries for network operations (DNS, Connect, Speedtest)
  # 1 retry = 2 total attempts.
  retries: 1
  
  anneal_budget_mb: 500
  worker_count: 500

  # Echo URL that returns IP in plain text
  echo_url: "http://api.ipify.org"
  
  dirty_check_url: "https://developers.google.com"
  
  speed_test_url: "https://speed.cloudflare.com/__down?bytes=5000000"

collectors:
  - name: "http"
    type: "http"
    params:
      url: "https://raw.githubusercontent.com/ari-ahm/rizznet/refs/heads/main/sub"
  - name: "http"
    type: "http"
    params:
      url: "https://raw.githubusercontent.com/AzadNetCH/Clash/refs/heads/main/AzadNet.txt"
  - name: "http"
    type: "http"
    params:
      url: "https://raw.githubusercontent.com/Epodonios/v2ray-configs/refs/heads/main/All_Configs_Sub.txt"

